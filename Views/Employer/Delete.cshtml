@model ApplicationUser

<h1>Delete Employer</h1>

<div>
    <h4>Are you sure you want to delete this Employer?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
    </dl>
    <form asp-controller="Employer" asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <button type="submit" value="Delete" class="btn btn-primary" />Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
